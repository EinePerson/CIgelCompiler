{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debugger",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/igel.exe",
            "args":["./igel.ig"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ],
    
}